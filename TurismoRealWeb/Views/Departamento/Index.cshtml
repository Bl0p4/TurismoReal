@using TurismoRealWeb.BLL;
@model TurismoRealWeb.BLL.Departamento
@{
    ViewBag.Title = "Index";
}

@{ List<Departamento> departamentos = (List<Departamento>)ViewBag.departamentos;}

<ol class="breadcrumb mb-4 mt-4">
    <li class="breadcrumb-item"><a href="index.html">Mantenedores</a></li>
    <li class="breadcrumb-item active">Departamentos</li>
</ol>

<div class="card">
    <div class="card-header">
        <i class="fas fa-building me-1"></i> Lista de Departamentos
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-12">
                <button type="button" class="btn btn-success" onclick="abrirModal()">Crear Nuevo</button>
            </div>
        </div>

        <hr />

        <table id="Dptos" class="display cell-border" style="width: 100%">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>N° Dpto</th>
                    <th>Direccion</th>
                    <th>Ciudad</th>
                    <th>Estado</th>
                    <th>Opciones</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>


    </div>
</div>


<!-- Modal -->
<div class="modal fade" id="FormModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-dark text-white">
                <h5 class="modal-title" id="exampleModalLabel">Departamento</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body g-2">

                <div class="row">

                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" id="txtNombre" placeholder="name@example.com">
                        <label for="txtNombre">Departamento</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" id="txtNumDpto" placeholder="name@example.com">
                        <label for="txtNumDpto" class="form-label">Nro. Dpto</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" id="txtDireccion" placeholder="name@example.com">
                        <label for="txtDireccion" class="form-label">Dirección</label>
                    </div>
                    <div class="form-floating mb-3">
                        <select class="form-select" aria-label="Select Ciudad">
                            @Html.DropDownListFor(d => d.CiudadId, new SelectList(ViewBag.ciudades, "Id", "Nombre"))
                        </select>
                        <label for="exampleFormControlInput1" class="form-label">Ciudad</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input type="email" class="form-control" id="exampleFormControlInput1" placeholder="name@example.com">
                        <label for="exampleFormControlInput1" class="form-label">Superficie</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input type="email" class="form-control" id="exampleFormControlInput1" placeholder="name@example.com">
                        <label for="exampleFormControlInput1" class="form-label">Precio</label>
                    </div>
                    <div class="form-floating mb-3">
                        <textarea class="form-control" id="txtCondicion" style="height: 100px"></textarea>
                        <label for="exampleFormControlInput1" class="form-label">Condición</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input type="email" class="form-control" id="exampleFormControlInput1" placeholder="name@example.com">
                        <label for="exampleFormControlInput1" class="form-label">Disponible</label>
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Volver</button>
                <button type="button" class="btn btn-primary">Guardar</button>
            </div>
        </div>
    </div>
</div>



@section scripts{
    <script>

        var tabladata;


        tabladata = $("#Dptos").DataTable({
            responsive: true,
            ordering: false,
            "ajax": {
                url: '@Url.Action("ListarDptos", "Departamento")',
                type: "GET",
                dataType: "json"
            },
            "columns": [
                { "data": "Nombre" },
                { "data": "NumDpto" },
                { "data": "Direccion" },
                { "data": "Ciudad.Nombre" },
                {
                    "data": "Disponible", "render": function (valor) {
                        if (valor == 1) {
                            return '<span class="badge bg-success">Disponible</span>'
                        } else {
                            return '<span class="badge bg-danger">No Disponible</span>'
                        }
                    }

                },
                {
                    "defaultContent": '<button type="button" class="btn btn-warning btn-sm"><i class="fas fa-file"></i></button>' +
                                      '<button type="button" class="btn btn-primary btn-sm ms-2"><i class="fas fa-pen"></i></button>' +
                                      '<button type="button" class="btn btn-danger btn-sm ms-2"><i class="fas fa-trash"></i></button>',
                    "orderable": false,
                    "searchable": false,
                    "width": "100px"
                }
            ],
            "language": {
                "url": "https://cdn.datatables.net/plug-ins/1.12.1/i18n/es-ES.json"
            }
        });


        function abrirModal() {

            $("#FormModal").modal("show");
        }


    </script>

}










