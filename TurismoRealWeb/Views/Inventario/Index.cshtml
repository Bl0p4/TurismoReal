@using TurismoRealWeb.BLL;

@{
    ViewBag.Title = "Index";
}

<h2>Inventario de Departamentos</h2>

@{ List<Inventario> inventarios = (List<Inventario>)ViewBag.inventario;}
@Html.ActionLink("Nuevo Inventario", "Create")

<table id="tabla">
    <tr>
        <th>Item</th>
        <th>Valor</th>
        <th>Departamento</th>
        <th>Disponible</th>
        <th>Opciones</th>

    </tr>
    @foreach (var inventario in inventarios)
    {
        <tr>
            <td>@inventario.Item</td>
            <td>@inventario.Valor</td>
            <td>@inventario.Dpto.Nombre</td>
            <td>@inventario.Disponible</td>
            <td>
                @Html.ActionLink("Eliminar", "Delete", new { id = inventario.Id })
                <span> || </span>
                @Html.ActionLink("Modificar", "Edit", new { id = inventario.Id })
            </td>

        </tr>
    }

</table>

@section scripts{
    <script type="text/javascript">

        function openSuccessModal(strMessage) {
            var myDiv = document.getElementById("myModalSuccessAlertBody");
            myDiv.innerHTML = strMessage;

            $('#myModalSuccess').modal("show");
        }


        $(document).ready(function () {
            var msg = "@TempData["SuccessMessage"]";
            if (msg)
                openSuccessModal(msg);
        });



    </script>
}