                    @Html.TextBoxFor(i => i.Descripcion)
                </div>
            </div>
            <div class="row">
                <div class="col-md-6" style="padding:10px">
                    @Html.LabelFor(i => i.Fech_ini)
                </div>
                <div class="col-md-6" style="padding:10px">

                </div>
            </div>
            <div class="row">
                <div class="col-md-6" style="padding:10px">
                    @Html.LabelFor(i => i.Fech_term)
                </div>
                <div class="col-md-6" style="padding:10px">

                </div>
            </div>
            <div class="row">
                <div class="col-md-6" style="padding:10px">
                    @Html.LabelFor(i => i.Costo)
                </div>
                <div class="col-md-6" style="padding:10px">
                    @Html.TextBoxFor(i => i.Costo)
                </div>
            </div>
