@model TurismoRealWeb.BLL.Mantencion

@{
    ViewBag.Title = "Create";
}

@Html.ActionLink("Listado de Mantenciones", "Index")

<div class="col-md-5" style="margin: 20px 20px; width: 700px; height: 600px; background-color: #f2f2f2 ">
    @using (Html.BeginForm())
    {
        <h3 style="text-align:center;">Nueva Mantención</h3>
        <div style="width:60%; margin:0 auto;padding:20px;">
