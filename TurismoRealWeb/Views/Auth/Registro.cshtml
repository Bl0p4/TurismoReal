@model TurismoRealWeb.BLL.Usuario
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Registrar - Turismo Real</title>
    @Styles.Render("~/Content/css")
    <script src="https://use.fontawesome.com/releases/v6.1.0/js/all.js" crossorigin="anonymous"></script>
</head>
<body class="bg-gradient">
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-7">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div class="card-header"><h3 class="text-center font-weight-light my-4">Registro</h3></div>
                                <div class="card-body">
                                    <form>
                                        <div class="row mb-3">
                                            <div class="col-md-6">
                                                <div class="form-floating mb-3 mb-md-0">
                                                    @Html.TextBoxFor(u => u.Username, new { @placeholder = "Usuario", @class = "form-control" })
                                                    @Html.ValidationMessageFor(u => u.Username, "", new { @class = "text-danger" })
                                                    <label for="Nombre">Nombre</label>
                                                </div>
                                            </div>
                                            <div class="col-md-3">
                                                <div class="form-floating">
                                                    @Html.TextBoxFor(u => u.Paterno, new { @placeholder = "Paterno", @class = "form-control" })
                                                    @Html.ValidationMessageFor(u => u.Paterno, "", new { @class = "text-danger" })
                                                    <label for="ApePAt">Paterno</label>
                                                </div>
                                            </div>
                                            <div class="col-md-3">
                                                <div class="form-floating mb-3 mb-md-0">
                                                    @Html.TextBoxFor(u => u.Materno, new { @placeholder = "Materno", @class = "form-control" })
                                                    @Html.ValidationMessageFor(u => u.Materno, "", new { @class = "text-danger" })
                                                    <label for="ApeMat">Materno</label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <div class="col-md-4">
                                                <div class="form-floating mb-3 mb-md-0">
                                                    @Html.TextBoxFor(u => u.Rut, new { @placeholder = "Rut", @class = "form-control" })
                                                    @Html.ValidationMessageFor(u => u.Rut, "", new { @class = "text-danger" })
                                                    <label for="Rut">Rut</label>
                                                </div>
                                            </div>
                                            <div class="col-md-2">
                                                <div class="form-floating">
                                                    @Html.TextBoxFor(u => u.Dv, new { @placeholder = "DV", @class = "form-control" })
                                                    @Html.ValidationMessageFor(u => u.Dv, "", new { @class = "text-danger" })
                                                    <label for="DV">Dv</label>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-floating">
                                                    @Html.TextBoxFor(u => u.Direccion, new { @placeholder = "Direccion", @class = "form-control" })
                                                    @Html.ValidationMessageFor(u => u.Direccion, "", new { @class = "text-danger" })
                                                    <label for="Direccion">Dirección</label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <div class="col-md-6">
                                                <div class="form-floating mb-3 mb-md-0">
                                                    @Html.TextBoxFor(u => u.Ciudad, new { @placeholder = "Ciudad", @class = "form-control" })
                                                    @Html.ValidationMessageFor(u => u.Ciudad, "", new { @class = "text-danger" })
                                                    <label for="Ciudad">Ciudad</label>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-floating mb-3 mb-md-0">
                                                    @Html.TextBoxFor(u => u.Telefono, new { @placeholder = "Telefono", @class = "form-control" })
                                                    @Html.ValidationMessageFor(u => u.Telefono, "", new { @class = "text-danger" })
                                                    <label for="Telefono">Telefono</label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-floating mb-3">
                                            @Html.TextBoxFor(u => u.Email, new { @placeholder = "Email", @class = "form-control" })
                                            @Html.ValidationMessageFor(u => u.Email, "", new { @class = "text-danger" })
                                            <label for="email">Correo Electrónico</label>
                                        </div>
                                        <div class="row mb-3">
                                            <div class="col-md-6">
                                                <div class="form-floating mb-3 mb-md-0">
                                                    @Html.TextBoxFor(u => u.Username, new { @placeholder = "Usuario", @class = "form-control" })
                                                    @Html.ValidationMessageFor(u => u.Username, "", new { @class = "text-danger" })
                                                    <label for="username">Usuario</label>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-floating mb-3 mb-md-0">
                                                    @Html.PasswordFor(u => u.Password, new { @placeholder = "Contraseña", @class = "form-control" })
                                                    @Html.ValidationMessageFor(u => u.Password, "", new { @class = "text-danger" })
                                                    <label for="password">Contraseña</label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="mt-4 mb-0">
                                            <div class="d-grid"><input type="submit" value="Registrar Cuenta" class="btn btn-primary d-grid btn-block" /></div>
                                            
                                        </div>
                                    </form>
                                </div>
                                <div class="card-footer text-center py-3">
                                    <div class="small"><a href="@Url.Action("Login","Auth")">Estás Registrado/a? Inicia Sesión</a></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
        <div id="layoutAuthentication_footer">
            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">Copyright &copy; Turismo Real 2022</div>
                        <div>
                            <a href="#">Privacy Policy</a>
                            &middot;
                            <a href="#">Terms &amp; Conditions</a>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="js/scripts.js"></script>
</body>
</html>

